{
    "compilerOptions": {
        "module": "amd",
        "rootDir": "..",
        "moduleResolution": "classic",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        "declaration": false,
        "inlineSourceMap": true,
        "inlineSources": false,

        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "bower_components",
        "node_modules",
        "src/tests",
        "tools",
        "wwwroot"
    ]
}