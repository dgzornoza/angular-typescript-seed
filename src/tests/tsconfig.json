{
    "compilerOptions": {
        "module": "amd",
        "rootDir": "..",
        "moduleResolution": "classic",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        "declaration": false,
        "inlineSourceMap": true,
        "inlineSources": false
    },
    "exclude": [
        "bower_components",
        "node_modules",
        "src/app",
        "tools",
        "typings",
        "wwwroot"
    ]
}
